@model IEnumerable<Madden.Player>
@{
    ViewBag.Title = "LeaguePlayers";
}

<h2>LeaguePlayers</h2>

<table id="Offensive Skill Positions">
    <tr>
        <th>Pos</th>
        <th>Name</th>
        <th class="statHead">Age</th>
        <th class="statHead" title="Overall">OVR</th>
        <th class="statHead" title="Speed">SPD</th>
        <th class="statHead" title="Development Trait">Dev</th>
        <th class="statHead" title="Years Left on Current Contract">YRS</th>
    </tr>
    @foreach (var player in Model.OrderByDescending(m => m.Overall))
    {
        <tr class="playerRow">
            <td class="positionCol">@player.Position</td>
            <td class="nameCol">
                <span class="firstName">@player.FirstName.Substring(0, 1)</span>
                <span class="lastName">@player.LastName</span>
            </td>
            <td class="statCol">@player.Age</td>
            <td class="statCol">@player.Overall</td>
            <td class="statCol">@player.Speed</td>
            <td class="statCol">@player.Development</td>
            <td class="statCol">@player.ContractYearsLeft</td>
        </tr>
    }
</table>